<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_subject_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 학년 필터 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button android:id="@+id/btn_grade1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1학년"/>
        <Button android:id="@+id/btn_grade2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2학년"/>
        <Button android:id="@+id/btn_grade3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3학년"/>
        <Button android:id="@+id/btn_grade4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4학년"/>
    </LinearLayout>

    <!-- 과목 리스트 -->
    <ListView
        android:id="@+id/list_subjects"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:choiceMode="multipleChoice"
        android:dividerHeight="8dp"/>

    <!-- 적용 버튼 -->
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간표 적용하기"
        android:layout_marginTop="12dp"/>
</LinearLayout>
